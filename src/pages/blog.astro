---
import Layout from "../layouts/Layout.astro";
import DateText from "../components/DateText.astro";

const posts = Object.values(import.meta.glob("./posts/*.md", { eager: true }));
---

<Layout title="Blog">
  <h1>
    My <span class="carousel" values="Ramblings,Blog Posts">Blog Posts</span>
  </h1>

  <ul>
    {
      posts
        .sort(
          (a, b) =>
            Date.parse(b.frontmatter.pubDate) -
            Date.parse(a.frontmatter.pubDate),
        )
        .map((post: any) => (
          <li>
            <a href={post.url}>
              {post.frontmatter.title} -
              <em><DateText date={post.frontmatter.pubDate} /></em>
            </a>
          </li>
        ))
    }
  </ul>
</Layout>
